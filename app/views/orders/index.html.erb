<h1>Listing Orders</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Order No#</th>
      <th>Total Price</th>
      <th>Customer</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td>
          <%= link_to order.order_no, order %>
        </td>
        <td><%= order.total %></td>
        <td><%= "#{order.customer_name} (#{order.customer.email})" %></td>
        <td><%= order.date %></td>
      </tr>
    <% end %>
  </tbody>
</table>
